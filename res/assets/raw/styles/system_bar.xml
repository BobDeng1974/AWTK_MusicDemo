<system_bar>
  <style name="default">
  </style>
</system_bar>

<label>
  <style name="default">
    <normal text_color="white" text_align_h="left" font_size="24"/>
  </style>
</label>

<digit_clock>
  <style name="default">
    <normal text_color="white" text_align_h="center" font_size="16"/>
  </style>
</digit_clock>

<button>
  <style name="default" font_size="16">
    <normal text_color="white"/>
    <pressed text_color="#04fd21"/>
    <over text_color="#04fd21"/>
  </style>
</button>

<check_button>
  <!--用于语言切换按钮-->
  <style name="default" font_size="16">
    <normal  text_color="white"/>
    <pressed text_color="#04fd21" x_offset="1" y_offset="1"/>
    <over    text_color="#04fd21" x_offset="1" y_offset="1"/>
    <normal_of_checked text_color="white"/>
    <pressed_of_checked text_color="#04fd21" x_offset="1" y_offset="1"/>
    <over_of_checked text_color="#04fd21" x_offset="1" y_offset="1"/>
  </style>
</check_button>

<image>
  <style name="default">
    <normal/>
  </style>
</image>